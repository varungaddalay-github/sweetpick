# API Keys
OPENAI_API_KEY=your_openai_api_key_here
SERPAPI_KEY=your_serpapi_key_here

# Milvus Cloud Configuration
# Option 1: API Token Authentication (Recommended)
MILVUS_URI=https://your-cluster.zillizcloud.com
MILVUS_TOKEN=your_milvus_api_token_here

# Option 2: Username/Password Authentication (Alternative)
# MILVUS_USERNAME=your_milvus_username_here
# MILVUS_PASSWORD=your_milvus_password_here

# Milvus Database (optional, defaults to "default")
MILVUS_DATABASE=default

# Database
DATABASE_URL=postgresql://user:password@localhost/sweet_morsels

# Redis
REDIS_URL=redis://localhost:6379

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO

# OpenAI Configuration
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=1000
TEMPERATURE=0.1

# SerpAPI Configuration
MAX_RESTAURANTS_PER_CITY=50
MAX_REVIEWS_PER_RESTAURANT=40
MIN_RATING=4.0
MIN_REVIEWS=400

# Processing Configuration
BATCH_SIZE=8
MAX_RETRIES=3
RETRY_DELAY=1.0

# Vector Database Configuration
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7

# Cost Management
MONTHLY_BUDGET=90.0
COST_ALERT_THRESHOLD=0.8

# Supported Locations and Cuisines
SUPPORTED_CITIES=["Jersey City", "Hoboken"]
SUPPORTED_CUISINES=["Italian", "Indian", "Chinese", "American", "Mexican"] 